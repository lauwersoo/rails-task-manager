<h1>Your tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <li>
    <h4><%= task.title %></h4>
    <p>Done? : <% if task.completed == true %>
                                    <%= "Yes" %>
                                  <% else %>
                                    <%= "No" %>
                                  <% end %>
    </p>
    <p><%= link_to "Update", edit_path(task)%>
    <%= link_to "Delete", task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" } %></p>
  </li>
<% end %>
</ul>
<br>
<br>
<%= link_to "Add a new task", tasks_new_path %>
