<h1 class="title">Your tasks</h1>
<div class="container">
  <% @tasks.each do |task| %>
    <div class="container_card">
      <%= link_to "#{task.title}", task_path(task) %>
      <% if task.completed == true %>
                                      <h4><%= "✅" %></h4>
                                    <% else %>
                                      <h4><%= "❌" %></h4>
                                    <% end %>
      <p><%= link_to "Update", edit_path(task)%>
      <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
    </div>
  <% end %>
</div>
<div class="container_footer">
  <div>
    <%= link_to "Add a new task", tasks_new_path, class:"footer" %>
  </div>
</div>
